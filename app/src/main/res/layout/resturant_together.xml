<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/resutrant_together"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <!---->
    <RelativeLayout
        android:layout_width="388dp"
        android:layout_height="300dp"
        >

        <TextView
            android:id="@+id/activity_title"
            android:textSize="22sp"
            android:text="Title:"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_below="@+id/activity_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/criteria" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/activity_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/criteria"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Criteria"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/rating"
            android:layout_width="166dp"
            android:layout_height="30dp"
            android:background="@color/Yellow"
            android:paddingRight="25dp"
            android:layout_alignBottom="@+id/activity_title"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Deal: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isDeal"
            android:layout_alignBaseline="@+id/criteria"
            android:layout_alignBottom="@+id/criteria"
            android:layout_toEndOf="@+id/criteria" />
    </RelativeLayout>

    <!--<include android:id="@+id/singleResutant" layout="@layout/single_cube"-->
    <!--android:layout_width="match_parent" android:layout_height="80dp" />-->

    <LinearLayout
        android:padding="10dp"
        android:background="@color/DarkYellow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Yellow">


            <TextView
                android:id="@+id/description"
                android:textSize="20sp"
                android:text="Description of Resturant"

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_above="@+id/linearLayout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="100dp"
                    android:id="@+id/webButton"
                    android:background="@color/red"
                    android:src ="@android:drawable/ic_dialog_info"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="100dp"
                    android:src="@android:drawable/ic_menu_compass"
                    android:background="@color/Yellow"
                    android:id="@+id/navButton"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/webButton" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="100dp"
                    android:background="#03ca17"
                    android:src= "@android:drawable/sym_action_call"
                    android:id="@+id/callButton"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/navButton" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="100dp"
                    android:background="@color/Blue"
                    android:src= "@drawable/renew"
                    android:id="@+id/fullday"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/callButton" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>