<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listCubes"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp">


    <include android:id="@+id/first_cube" layout="@layout/list_cube"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp" />


    <include android:id="@+id/second_cube" layout="@layout/list_cube"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:layout_marginTop="10dp"/>

    <include android:id="@+id/thrid_cube" layout="@layout/list_cube"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:layout_marginTop="10dp"/>

    <include android:id="@+id/fourth_cube" layout="@layout/list_cube"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:layout_marginTop="10dp"/>

    <include android:id="@+id/fifth_cube" layout="@layout/list_cube"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:layout_marginTop="10dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/full_and_bar_hopping_ad_unit_id"
        android:layout_height="50dp">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
    